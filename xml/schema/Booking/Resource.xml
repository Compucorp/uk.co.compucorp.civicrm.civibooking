<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Booking</base>
  <class>Resource</class>
  <name>civicrm_booking_resource</name>
  <comment></comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment></comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>set_id</name>
    <type>int unsigned</type>
    <comment>FK to resource configuration option set</comment>
  </field>
  <foreignKey>
    <name>set_id</name>
    <table>civicrm_booking_resource_config_set</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>label</name>
    <type>varchar</type>
    <length>255</length>
    <comment></comment>
    <title>Label</title>
    <required>true</required>

    <!-- <export>true</export>-->
    <uniqueName>booking_resource_label</uniqueName>
  </field>

  <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <comment></comment>
    <title>Label</title>
    <!-- <export>true</export> -->
    <uniqueName>booking_resource_description</uniqueName>
  </field>

  <field>
    <name>type_id</name>
    <title>Type ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>The type associated with this resource. Implicit FK to option_value row in booking_resource_type option_group.</comment>
    <add>4.4</add>
    <pseudoconstant>
      <optionGroupName>booking_resource_type</optionGroupName>
    </pseudoconstant>
  </field>

  <field>
    <name>location_id</name>
    <title>Location ID</title>
    <required>true</required>
    <type>int unsigned</type>
    <comment>The location associated with this resource. Implicit FK to option_value row in booking_resource_location option_group.</comment>
    <add>4.4</add>
    <pseudoconstant>
      <optionGroupName>booking_resource_location</optionGroupName>
    </pseudoconstant>
  </field>


  <field>
    <name>weight</name>
    <type>int</type>
    <required>true</required>
    <!-- <default>1</default> -->
  </field>

   <field>
    <name>is_unlimited</name>
    <type>boolean</type>
    <required>true</required>

   </field>

   <field>
    <name>is_active</name>
    <type>boolean</type>
    <required>true</required>
   </field>

   <field>
    <name>is_deleted</name>
    <type>boolean</type>
   </field>


</table>
