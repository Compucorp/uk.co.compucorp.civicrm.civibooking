<?xml version="1.0" encoding="iso-8859-1" ?>
<table>
  <base>CRM/Booking</base>
  <class>BookingConfig</class>
  <name>civicrm_booking_config</name>
  <comment></comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment></comment>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>false</autoincrement>
  </primaryKey>


  <field>
    <name>domain_id</name>
    <type>int unsigned</type>
    <required>true</required>
  </field>


  <field>
    <name>financial_type_default</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Default financial type for payment</comment>
  </field>
  <foreignKey>
    <name>financial_type_default</name>
    <table>civicrm_financial_type</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>price_set_default</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Price set to use for ad-hoc charges</comment>
  </field>
   <foreignKey>
    <name>price_set_default</name>
    <table>civicrm_price_set</table>
    <key>id</key>
    <add>4.4</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>



  <field>
    <name>day_start_at</name>
    <type>time</type>
    <required>true</required>
  </field>

  <field>
    <name>day_end_at</name>
    <type>time</type>
    <required>true</required>
  </field>


  <field>
    <name>log_confirmation_email</name>
    <type>boolean</type>
    <required>true</required>
    <default>0</default>
  </field>

  <field>
    <name>selected_email_address</name>
    <type>varchar</type>
    <length>255</length>
  </field>

  <field>
    <name>cc_email_address</name>
    <type>varchar</type>
    <length>255</length>
  </field>

  <field>
    <name>bcc_email_address</name>
    <type>varchar</type>
    <length>255</length>
  </field>

  <field>
    <name>created_activity</name>
    <type>boolean</type>
    <comment>Create an activity record againt contact for conformation emails</comment>
  </field>

  <field>
    <name>slot_avaliable_colour</name>
    <type>varchar</type>
    <length>10</length>
  </field>

  <field>
    <name>slot_unavaliable_colour</name>
    <type>varchar</type>
    <length>10</length>
  </field>


</table>
