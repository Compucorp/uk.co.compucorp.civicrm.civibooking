  </field>

   <field>
    <name>price</name>
    <type>decimal</type>
  </field>

	<field>
    <name>max_size</name>
    <type>varchar</type>
    <length>100</length>
  </field>


   <field>
    <name>united_id</name>
    <type>int unsigned</type>
   </field>

    <field>
    <name>weight</name>
